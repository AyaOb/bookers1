<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <tb>Title</tb>
      <tb>Body</tb>
      <tb><%= link_to "Show", book_path(book.id) %></tb>
      <tb><%= link_to "Edit", edit_book_path(book.id) %></tb>
      <tb><%= link_to "Destroy", book_path(book.id), method: :delete %> </tb>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Creat Book' %>
  </div>
<% end %>